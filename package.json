{
  "name": "bdcreations",
  "version": "0.0.1",
  "description": "frontend for new bdcreations website",
  "main": "index.js",
  "scripts": {
    "docker:build": "docker build --no-cache=true -t my-apache2 .",
    "docker:stop": "docker stop bdcreations-site",
    "docker:remove": "docker rm bdcreations-site",
    "docker:run": "docker run -dit -v `pwd`/build/:/usr/local/apache2/htdocs/ -p 80:80 --name bdcreations-site my-apache2",
    "build": "rm -rf build/* && gulp --env development && webpack -d --ENV=development",
    "build:prod": "rm -rf dist/* && gulp --env production && webpack -p --ENV=production",
    "watch:styles": "gulp watch --env development",
    "watch:js": "webpack --watch -d --ENV=development",
    "sync": "browser-sync start --proxy 'http://localhost' --no-notify --ws --serveStatic 'build' --files 'build'",
    "serve": "npm run docker:stop && npm run docker:remove && npm run docker:run && npm run sync"
  },
  "keywords": [
    "bdcreations"
  ],
  "author": "Bob Donderwinkel",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "browser-sync": "^2.18.8",
    "css-modularscale": "^1.1.1",
    "cssnano": "^3.7.6",
    "del": "^2.2.2",
    "event-stream": "^3.3.4",
    "front-matter": "^2.1.0",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-batch": "^1.0.5",
    "gulp-changed": "^1.3.2",
    "gulp-data": "^1.2.1",
    "gulp-fn": "0.0.0",
    "gulp-if": "^2.0.1",
    "gulp-image-resize": "^0.11.0",
    "gulp-livereload": "^3.8.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-twig": "^0.5.0",
    "gulp-watch": "^4.3.10",
    "lodash": "^4.17.4",
    "minimist": "^1.2.0",
    "parallelshell": "^2.0.0",
    "postcss": "^5.2.4",
    "postcss-cssnext": "^2.8.0",
    "postcss-easy-import": "^1.0.1",
    "postcss-utilities": "^0.5.1",
    "reset-css": "^2.2.0",
    "slug": "^0.9.1",
    "velocity-animate": "^1.2.3",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "yargs": "^6.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0"
  }
}
